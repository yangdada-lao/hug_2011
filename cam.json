{
    "id": "custom_preference_filter",
    "name": "个性化偏好筛选器",
    "description": "优先展示高赞长视频，屏蔽指定UP主及低互动内容",
    "version": "1.1.0",
    "author": "插件开发者",
    "type": "feed",
    "rules": [
        {
            "field": "owner.mid",
            "op": "in",
            "value": [123456, 789012, 345678],
            "action": "hide"
        },
        {
            "condition": {
                "and": [
                    { "field": "stat.view", "op": "gt", "value": 10000 },
                    { "field": "stat.like", "op": "lt", "value": "${stat.view}*0.01" }
                ]
            },
            "action": "hide"
        },
        {
            "condition": {
                "and": [
                    { "field": "duration", "op": "gt", "value": 600 },
                    { "field": "stat.like", "op": "ge", "value": 100000 }
                ]
            },
            "action": "highlight",
            "style": {
                "color": "#FF6B6B",
                "bold": true,
                "scale": 1.1
            }
        },
        {
            "field": "title",
            "op": "contains",
            "value": ["抽奖", "互赞", "关注", "求赞", "拉新"],
            "action": "hide"
        }
    ]
}
